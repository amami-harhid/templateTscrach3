/**
 * Dont modify this file.
 * このファイルは変更禁止です。
 */
{
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules/*"],
  "compilerOptions": {
    "target": "es2020", // es2018,es2019,es2020,esnext が適している
    "module": "es2020",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@typeJS/*": ["./node_modules/@tscratch3/tscratch3likejs/types/scratchjs/*"],
    },
    "sourceMap": true,
    "outDir": "./build",
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,     // 暗黙的な「any」型を許可。
    "noImplicitThis": true,     // 暗黙的なthisの型推定を「禁止」。 
    "skipLibCheck": true
  }
}
